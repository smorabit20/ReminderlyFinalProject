<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ReminderlyFinalProject" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <!--Changes Button Color-->
        <item name="colorPrimary">@color/light_red</item>
        <item name="colorPrimaryVariant">@color/light_blue</item>

        <!--Changes Button Text Color-->
        <item name="colorOnPrimary">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!--Changes Background Color-->
        <item name="android:windowBackground">@color/light_blue</item>

        <!--Changes Text Color-->
        <item name="android:textColor">@color/light_purple</item>
        <item name="android:editTextBackground">@color/white</item>
        <item name="android:editTextColor">@color/light_purple</item>

        <!--Changes Font-->
        <item name="android:typeface">serif</item>
        <item name="android:fontFamily">@font/alegreya</item>
        <item name="android:textSize">20dp</item>

    </style>
</resources>